generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Type {
  Saida
  Entrada
}

enum Modality {
  Pix
  Dinheiro
  Credito
  Debito
  Boleto
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  Finance   Finance[]
}

model Finance {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
  type        Type
  amount      Float
  description String
  modality    Modality
  date        DateTime
  createdAt   DateTime @default(now())
}
